<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context="com.example.bereket.callblocker.SingleContactLogActivity"
android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="72dp"
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/contact_name_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/log_list_view_id" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical" >
                <TextView
                    android:id="@+id/empty_contact_log_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/empty_contact_log"
                    android:visibility="gone"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#d3d3d3"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

    </LinearLayout>
</LinearLayout>
