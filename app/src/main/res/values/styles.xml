<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:alertDialogTheme">@style/CallBlockerDialogStyle</item>
        <item name="actionModeBackground">@color/primary_dark</item> <!-- action mode background color -->
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item> <!-- actionbar popup style -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#2196F3</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="CallBlockerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/primary</item> <!--will affect your text colors of negative or positive buttons -->
        <item name="android:textColor">@color/accent</item> <!-- will affect your title text color of dialog. -->
        <item name="android:textColorPrimary">@color/primary_text</item> <!-- will affect your message color of dialog. -->
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

</resources>